task :guard do
    exec %q(bundle exec guard)
end

task :steep do
  require "steep"
  require "steep/cli"
  Steep::CLI.new(argv: ["check", "--log-level=error"], stdout: $stdout, stderr: $stderr, stdin: $stdin).run
end

namespace :steep do
  task :stats do
    exec %q(bundle exec steep stats --log-level=error --format=table)
  end
end
